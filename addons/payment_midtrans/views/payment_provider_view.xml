<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="payment_provider_midtrans_form" model="ir.ui.view">
        <field name="name">payment.provider.midtrans.form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='provider_credentials']" position="inside">
                <field name="midtrans_environment"/>
                <field name="midtrans_client_key"/>
                <field name="midtrans_server_key" password="True"/>
            </xpath>

        </field>
    </record>

</odoo>
