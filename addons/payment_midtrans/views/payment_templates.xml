<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="payment_midtrans_button" inherit_id="payment.checkout">
        <xpath expr="//div[@id='payment_methods']" position="inside">
            <t t-if="provider.code == 'midtrans'">
                <button type="button"
                        class="btn btn-primary"
                        id="midtrans-pay">
                    Pay with Midtrans
                </button>
            </t>
        </xpath>
    </template>

</odoo>
